package testNG_Autometion;

import java.util.Random;
import java.util.concurrent.TimeUnit;

import org.openqa.selenium.By;
import org.openqa.selenium.JavascriptExecutor;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;
import org.testng.annotations.AfterMethod;
import org.testng.annotations.BeforeMethod;
import org.testng.annotations.Test;

public class HomeWork_Session5 {

	WebDriver driver;

	@BeforeMethod

	public void launchBrowser() {
		System.setProperty("webdriver.chrome.driver", "./driver/chromedriver.exe");
		driver = new ChromeDriver();
		driver.manage().timeouts().implicitlyWait(5, TimeUnit.SECONDS);
		driver.get("http://techfios.com/test/billing/?ng=login/");
	}

	@Test
	
	public void userMakeDepositInBankAndCash() throws InterruptedException {
		
		By User_Name_Locator = By.id("username");
		By Password_Locator = By.name("password");
		By LogIn_Locator = By.name("login");
		By Bank_Cash_Locator = By.xpath("//span[text()='Bank & Cash']");
		By New_account_Locator = By.xpath("//a[text()='New Account']");
		By Initial_Balance_locator = By.id("balance");
		//X path Axes
		//By Account_Submit_Locator = By.xpath("//div[@id='wrapper']/descendant::button[@class='btn btn-search']");
		//X path Axes were not working so get a straight x path
		By Account_Submit_Locator = By.xpath("//button[@class='btn btn-search']");
		
		driver.findElement(User_Name_Locator).sendKeys("techfiosdemo@gmail.com");
		driver.findElement(Password_Locator).sendKeys("abc123");
		driver.findElement(LogIn_Locator).click();
		driver.findElement(Bank_Cash_Locator).click();
		Thread.sleep(2000);
		driver.findElement(New_account_Locator).click();
		Thread.sleep(2000);
		driver.findElement(By.id("account")).sendKeys("KR Account");
		Thread.sleep(2000);
		String description = "KR Investment call :" + new Random().nextInt(9999);
		driver.findElement(By.id("description")).sendKeys(description);
		driver.findElement(Initial_Balance_locator).sendKeys("23000.00");
		Thread.sleep(5000);
		
		//my test was failing element clickIntercepted exeption , so tried some explicit wait but no luck
		//new WebDriverWait(driver,60).until(ExpectedConditions.invisibilityOfElementLocated(Account_Submit_Locator));
		
		driver.findElement(Account_Submit_Locator).click();
		
		//WebElement webElement = driver.findElement(Account_Submit_Locator);
		//((JavascriptExecutor) driver.getInnerDriver()).executeScript("arguments[0].click();", webElement);
		
		
		
		
		
	}

	@AfterMethod

	public void close() {

		driver.close();
		driver.quit();
	}

}
